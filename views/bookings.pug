doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='csrf-token' content=csrf)
    title SB Admin 2 - Bookings
    // Custom fonts for this template
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
    // Custom styles for this template
    link(href='/assets/css/sb-admin-2.min.css' rel='stylesheet')
    link(href='https://unpkg.com/gridjs/dist/theme/mermaid.min.css' rel='stylesheet')
    link(href='https://cdn.jsdelivr.net/npm/litepicker/dist/css/litepicker.css' rel='stylesheet')
  body#page-top
    // Page Wrapper
    #wrapper
      // Sidebar
      include sidebar.pug
      // End of Sidebar
      // Content Wrapper
      #content-wrapper.d-flex.flex-column
        // Main Content
        #content
          // Topbar
          include topbar.pug
          // End of Topbar
          // Begin Page Content
          .container-fluid
            // Page Heading
            .d-sm-flex.align-items-center.justify-content-between.mb-4
              h1.h3.mb-0.text-gray-800 Create Booking
            .row.justify-content-center
              // Content Column
              .col-lg-7.mb-4
                .card.shadow.mb-4
                  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Choose Items
                  .card-body
                    .itemGroup
                      .form-row
                        .col-lg-6.form-group
                          label.choiceLabel(for='items') Choose Item
                          select.custom-select.itemType#items
                            option(selected disabled value='null') Please Choose An Item
                        .col-lg-6.form-group
                          label.quantityLabel(for='quantity') Choose Item
                          input.form-control.itemQuantity#quantity(type='number' placeholder='Item Quantity')
                        //-button.btn.btn-danger.btn-circle.ml-auto(type='button')
                          i.fas.fa-trash
                    button.btn.btn-success.btn-circle.mt-3.float-right#another(type='button' data-toggle="tooltip" data-placement="right" title="Add Another Item")
                      i.fas.fa-plus
              .col-lg-5.mb-4
                .card.shadow.mb-4
                  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Configure
                  .card-body
                    .form-group
                      .input-group.input-group-joined(style='width: 16.5rem;')
                        span.input-group-text
                            i.fas.fa-calendar
                        input.form-control.ps-0.pointer#start-date(placeholder='Select start date...')
                    .form-group
                      label Please provide an end date
                      .input-group.input-group-joined(style='width: 16.5rem;')
                        span.input-group-text
                            i.fas.fa-calendar
                        input.form-control.ps-0.pointer#end-date(placeholder='Select end date...')
                    .form-group
                    .custom-control.custom-checkbox.mb-2
                      input#sendDetailsToSelfCheckbox.custom-control-input(type='checkbox')
                      label.custom-control-label(for='sendDetailsToSelfCheckbox') Send Booking Details To My Email

                    button.btn.btn-primary Create
                    

        include footer.pug
          a.scroll-to-top.rounded(href='#page-top')
            i.fas.fa-angle-up
          // Logout Modal
          #logoutModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='itemModalLabel' aria-hidden='true')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#itemModalLabel.modal-title Ready to Leave?
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') Ã—
                .modal-body Select "Logout" below if you are ready to end your current session.
                .modal-footer
                  button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
                  a.btn.btn-primary(href='/admin/logout') Logout
          // Bootstrap core JavaScript
          script(src='https://code.jquery.com/jquery-3.6.0.min.js')
          script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns' crossorigin='anonymous')
          // Core plugin JavaScript
          script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js')
          script(src='https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js')
          // Custom scripts for all pages
          script(src='/assets/js/sb-admin-2.min.js')
          script(src='/assets/js/admin/index.js')
          script(src='/assets/js/admin/bookings.js')