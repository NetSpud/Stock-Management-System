doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='csrf-token' content=csrf)
    title SB Admin 2 - Dashboard
    // Custom fonts for this template
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
    // Custom styles for this template
    link(href='/assets/css/sb-admin-2.min.css' rel='stylesheet')
    link(href='https://unpkg.com/gridjs/dist/theme/mermaid.min.css' rel='stylesheet')
  body#page-top
    // Page Wrapper
    #wrapper
      // Sidebar
      include sidebar.pug
      // End of Sidebar
      // Content Wrapper
      #content-wrapper.d-flex.flex-column
        // Main Content
        #content
          // Topbar
          include topbar.pug
          // End of Topbar
          // Begin Page Content
          .container-fluid
            // Page Heading
            .d-sm-flex.align-items-center.justify-content-between.mb-4
              h1.h3.mb-0.text-gray-800 Items
            .row.justify-content-center
              // Content Column
              .col-lg-7.mb-4
                .card.shadow.mb-4
                  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary#header
                  // Card Body
                  .card-body
                    form
                      .form-group
                        label(for='itemName') Name
                        input#itemName.form-control(type='text' placeholder='Wooden crates')
                        .invalid-feedback#itemNameFeedback
                      .form-group
                        label(for='itemQuantity') Quantity
                        input#itemQuantity.form-control(type='number' placeholder='3')
                        .invalid-feedback#itemQuantityFeedback
                      button#submitBtn.btn.btn-success(type='submit') Update
            .row
              .col-lg-12.mb-4
                #table

        include footer.pug
          
          // Logout Modal
          
          // Bootstrap core JavaScript
          script(src='https://code.jquery.com/jquery-3.6.0.min.js')
          script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns' crossorigin='anonymous')
          // Core plugin JavaScript
          script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js')
          script(src='https://unpkg.com/gridjs/dist/gridjs.umd.js')
          // Custom scripts for all pages
          script(src='/assets/js/sb-admin-2.min.js')
          script(src='/assets/js/admin/index.js')
          script(src='/assets/js/admin/editItem.js')