doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='csrf-token' content=csrf)
    title SB Admin 2 - Dashboard
    // Custom fonts for this template
    link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
    // Custom styles for this template
    link(href='/assets/css/sb-admin-2.min.css' rel='stylesheet')
  body#page-top
    // Page Wrapper
    #wrapper
      // Sidebar
      include sidebar.pug
      // End of Sidebar
      // Content Wrapper
      #content-wrapper.d-flex.flex-column
        // Main Content
        #content
          // Topbar
          include topbar.pug
          // End of Topbar
          // Begin Page Content
          .container-fluid
            // Page Heading
            .d-sm-flex.align-items-center.justify-content-between.mb-4
              h1.h3.mb-0.text-gray-800 Dashboard
              a.d-none.d-sm-inline-block.btn.btn-sm.btn-primary.shadow-sm(href='#')
                i.fas.fa-download.fa-sm.text-white-50
                |  Generate Report
            // Content Row
            .row.cardRow
              // Earnings (Monthly) Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-primary.shadow.h-100.py-2
                  .card-body
                    .row.no-gutters.align-items-center
                      .col.mr-2
                        .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1
                          | Total Items In Database
                        .h5.mb-0.font-weight-bold.text-gray-800#itemCount
                      .col-auto
                        i.fas.fa-calendar.fa-2x.text-gray-300
              // Earnings (Monthly) Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-success.shadow.h-100.py-2
                  .card-body
                    a.row.no-gutters.align-items-center(href='/admin/user' style="text-decoration: none;")
                      .col.mr-2
                        .text-xs.font-weight-bold.text-success.text-uppercase.mb-1
                          | Users
                        .h5.mb-0.font-weight-bold.text-gray-800#userCount
                      .col-auto
                        i.fas.fa-user-alt.fa-2x.text-gray-300
              // Earnings (Monthly) Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-info.shadow.h-100.py-2
                  .card-body
                    .row.no-gutters.align-items-center
                      .col.mr-2
                        .text-xs.font-weight-bold.text-info.text-uppercase.mb-1
                          | Tasks
                        .row.no-gutters.align-items-center
                          .col-auto
                            .h5.mb-0.mr-3.font-weight-bold.text-gray-800 50%
                          .col
                            .progress.progress-sm.mr-2
                              .progress-bar.bg-info(role='progressbar' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
                      .col-auto
                        i.fas.fa-clipboard-list.fa-2x.text-gray-300
              // Pending Requests Card Example
              .col-xl-3.col-md-6.mb-4
                .card.border-left-warning.shadow.h-100.py-2
                  .card-body
                    .row.no-gutters.align-items-center
                      .col.mr-2
                        .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1
                          | Pending Requests
                        .h5.mb-0.font-weight-bold.text-gray-800 18
                      .col-auto
                        i.fas.fa-comments.fa-2x.text-gray-300
            // Content Row
            .row
              // Area Chart
              .col-xl-8.col-lg-7
                .card.shadow.mb-4
                  // Card Header - Dropdown
                  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Earnings Overview
                    .dropdown.no-arrow
                      a#dropdownMenuLink.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                      .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                        .dropdown-header Dropdown Header:
                        a.dropdown-item(href='#') Action
                        a.dropdown-item(href='#') Another action
                        .dropdown-divider
                        a.dropdown-item(href='#') Something else here
                  // Card Body
                  .card-body
                    .chart-area
                      canvas#myAreaChart
              // Pie Chart
              .col-xl-4.col-lg-5
                .card.shadow.mb-4
                  // Card Header - Dropdown
                  .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                    h6.m-0.font-weight-bold.text-primary Revenue Sources
                    .dropdown.no-arrow
                      a#dropdownMenuLink.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                      .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                        .dropdown-header Dropdown Header:
                        a.dropdown-item(href='#') Action
                        a.dropdown-item(href='#') Another action
                        .dropdown-divider
                        a.dropdown-item(href='#') Something else here
                  // Card Body
                  .card-body
                    .chart-pie.pt-4.pb-2
                      canvas#myPieChart
                    .mt-4.text-center.small
                      span.mr-2
                        i.fas.fa-circle.text-primary
                        |  Direct
                      span.mr-2
                        i.fas.fa-circle.text-success
                        |  Social
                      span.mr-2
                        i.fas.fa-circle.text-info
                        |  Referral
            // Content Row
            .row
              // Content Column
              .col-lg-6.mb-4
                // Project Card Example
                .card.shadow.mb-4
                  .card-header.py-3
                    h6.m-0.font-weight-bold.text-primary Projects
                  .card-body
                    h4.small.font-weight-bold
                      | Server Migration 
                      span.float-right 20%
                    .progress.mb-4
                      .progress-bar.bg-danger(role='progressbar' style='width: 20%' aria-valuenow='20' aria-valuemin='0' aria-valuemax='100')
                    h4.small.font-weight-bold
                      | Sales Tracking 
                      span.float-right 40%
                    .progress.mb-4
                      .progress-bar.bg-warning(role='progressbar' style='width: 40%' aria-valuenow='40' aria-valuemin='0' aria-valuemax='100')
                    h4.small.font-weight-bold
                      | Customer Database 
                      span.float-right 60%
                    .progress.mb-4
                      .progress-bar(role='progressbar' style='width: 60%' aria-valuenow='60' aria-valuemin='0' aria-valuemax='100')
                    h4.small.font-weight-bold
                      | Payout Details 
                      span.float-right 80%
                    .progress.mb-4
                      .progress-bar.bg-info(role='progressbar' style='width: 80%' aria-valuenow='80' aria-valuemin='0' aria-valuemax='100')
                    h4.small.font-weight-bold
                      | Account Setup 
                      span.float-right Complete!
                    .progress
                      .progress-bar.bg-success(role='progressbar' style='width: 100%' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100')
                // Color System
                .row
                  .col-lg-6.mb-4
                    .card.bg-primary.text-white.shadow
                      .card-body
                        | Primary
                        .text-white-50.small #4e73df
                  .col-lg-6.mb-4
                    .card.bg-success.text-white.shadow
                      .card-body
                        | Success
                        .text-white-50.small #1cc88a
                  .col-lg-6.mb-4
                    .card.bg-info.text-white.shadow
                      .card-body
                        | Info
                        .text-white-50.small #36b9cc
                  .col-lg-6.mb-4
                    .card.bg-warning.text-white.shadow
                      .card-body
                        | Warning
                        .text-white-50.small #f6c23e
                  .col-lg-6.mb-4
                    .card.bg-danger.text-white.shadow
                      .card-body
                        | Danger
                        .text-white-50.small #e74a3b
                  .col-lg-6.mb-4
                    .card.bg-secondary.text-white.shadow
                      .card-body
                        | Secondary
                        .text-white-50.small #858796
                  .col-lg-6.mb-4
                    .card.bg-light.text-black.shadow
                      .card-body
                        | Light
                        .text-black-50.small #f8f9fc
                  .col-lg-6.mb-4
                    .card.bg-dark.text-white.shadow
                      .card-body
                        | Dark
                        .text-white-50.small #5a5c69
              .col-lg-6.mb-4
                // Illustrations
                .card.shadow.mb-4
                  .card-header.py-3
                    h6.m-0.font-weight-bold.text-primary Illustrations
                  .card-body
                    .text-center
                      img.img-fluid.px-3.px-sm-4.mt-3.mb-4(style='width: 25rem;' src='/assets/img/undraw_posting_photo.svg' alt='...')
                    p
                      | Add some quality, svg illustrations to your project courtesy of 
                      a(target='_blank' rel='nofollow' href='https://undraw.co/') unDraw
                      | , a
                      |                                         constantly updated collection of beautiful svg images that you can use
                      |                                         completely free and without attribution!
                    a(target='_blank' rel='nofollow' href='https://undraw.co/')
                      | Browse Illustrations on
                      | unDraw →
                // Approach
                .card.shadow.mb-4
                  .card-header.py-3
                    h6.m-0.font-weight-bold.text-primary Development Approach
                  .card-body
                    p
                      | SB Admin 2 makes extensive use of Bootstrap 4 utility classes in order to reduce
                      | CSS bloat and poor page performance. Custom CSS classes are used to create
                      | custom components and custom utility classes.
                    p.mb-0
                      | Before working with this theme, you should become familiar with the
                      | Bootstrap framework, especially the utility classes.
          // /.container-fluid
          // End of Main Content
          // Footer
        include footer.pug 
          // End of Footer
          // End of Content Wrapper
          // End of Page Wrapper
          // Scroll to Top Button
          a.scroll-to-top.rounded(href='#page-top')
            i.fas.fa-angle-up
          // Logout Modal
          #logoutModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#exampleModalLabel.modal-title Ready to Leave?
                  button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') ×
                .modal-body Select "Logout" below if you are ready to end your current session.
                .modal-footer
                  button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
                  a.btn.btn-primary(href='login.html') Logout
          // Bootstrap core JavaScript
          script(src='https://code.jquery.com/jquery-3.6.0.min.js')
          script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns' crossorigin='anonymous')
          // Core plugin JavaScript
          script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js')
          // Custom scripts for all pages
          script(src='/assets/js/sb-admin-2.min.js')
          script(src='/assets/js/admin/admin.js')
          // Page level plugins
          script(src='/assets/js/chart.js/Chart.min.js')
          // Page level custom scripts
          script(src='/assets/js/demo/chart-area-demo.js')
          script(src='/assets/js/demo/chart-pie-demo.js')
          style.
            .cardRow .card:hover {
            transform: translate(0px, -10px);
            }
            .cardRow .card {
            transition: all 0.5s;
            }